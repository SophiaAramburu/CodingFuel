<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Improve your interview skills!</title>
    <link rel='stylesheet' href='./output.css' />

  </head>

  <body class="ml-2 bg-[#24788F]">
    <div class="_centered bg-[#849DAB] flex justify-center pb-8" >
    <h1 class="text-6xl font-bold underline text-[#282130]">Hello Future Programmers</h1> 
    <img src= "computer.gif" alt="gif">
    </div>

    {{! Column for the header and main classes }}
  
      {{! Flex column for the header }}
      <header class='py-8'>
        <h1 class="py-5 box-sizing border box flex justify-center bg-[#F18A85]">
          <a href='/'>Sign up here to step inside the world of Coding Interviews!</a>
        </h1>
        <nav>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a href='/thread'>Question Thread</a>
            |
            <button class='no-button' id='logout'>logout</button>
          {{else}}
          <h2 class="bg-[#472731] flex justify-center box-sizing border box text-white"
            <a href='/login'>login</a>
          {{/if}}
        </nav>
      </header>
      {{! Fluid container for the body IMPORTANT }}
      <main class='container'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>